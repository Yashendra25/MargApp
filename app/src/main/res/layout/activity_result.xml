<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grad1"
    tools:context=".Activities.ResultActivity">
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text_marg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="@string/marg"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"/>
    <LinearLayout
        android:id="@+id/congo_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_marg"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/congo_imageView"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:src="@drawable/ic_celebration"
            android:layout_gravity="center"
            app:tint="@color/white" />
        <TextView
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:textFontWeight="18"
            android:textSize="28sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have cleared your test"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:textFontWeight="18"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <TextView
            android:id="@+id/scoreTextView"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:textFontWeight="18"
            android:textSize="18sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             />

    </LinearLayout>
    <Button
        android:id="@+id/proceedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:text="Proceed"
        android:textColor="@color/black"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textSize="18sp"
        android:textStyle="bold"
       app:layout_constraintTop_toBottomOf="@+id/congo_linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>