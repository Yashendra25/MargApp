<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grad1"
    tools:context=".Activities.InterestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/text_marg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:text="@string/marg"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"/>
        <!-- Career Choices -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Career Choices:"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>

        <!-- Career Category Spinner -->
        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Career Choices Spinner -->
        <Spinner
            android:id="@+id/choicesSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Textview for Other career choices -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write any other career choice:"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText for Other carrerchoices -->
        <EditText
            android:id="@+id/editTextOthercarreroption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:inputType="textAutoComplete|textAutoCorrect|textCapSentences|textMultiLine"
            android:hint="Enter other hobbies/interests"/>

        <!-- Interests/Hobbies -->
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Interests/Hobbies:"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Selected Hobbies Chips -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupHobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_dancing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dancing"
                android:checkable="true"
                android:clickable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/Singing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singing"
                android:checkable="true"
                android:clickable="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/Blogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blogging"
                android:checkable="true"
                android:clickable="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cooking"
                android:checkable="true"
                android:clickable="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_traveling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traveling"
                android:checkable="true"
                android:clickable="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_acting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acting"
                android:checkable="true"
                android:clickable="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/photographhy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photographhy"
                android:checkable="true"
                android:clickable="true" />


            <!-- Add more Chip widgets for other commonly used hobbies -->
        </com.google.android.material.chip.ChipGroup>

        <!-- Textview for Other Hobbies -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write any other hobbies/interests:"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- EditText for Other Hobbies -->
        <EditText
            android:id="@+id/editTextOtherHobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="16sp"
            android:inputType="textAutoComplete|textAutoCorrect|textCapSentences|textMultiLine"
            android:hint="Enter other hobbies/interests"/>

        <!-- Marks for Major Subjects -->
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Marks for Major Subjects:"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <!-- Header Row -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Math"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:padding="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Physics"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chemistry"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biology"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:padding="10dp"/>
                    </TableRow>

                    <!-- Year 1 Row -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year 1"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:padding="10dp"/>

                        <EditText
                            android:id="@+id/editText_math_year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Math"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>

                        <EditText
                            android:id="@+id/editText_physics_year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Physics"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_chemistry_year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Chemistry"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_english_year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="English"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_biology_year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Biology"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                    </TableRow>
                    <!-- Year 2 Row -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year 2"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:padding="10dp"/>

                        <EditText
                            android:id="@+id/editText_math_year2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Math"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>

                        <EditText
                            android:id="@+id/editText_physics_year2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Physics"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_chemistry_year2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Chemistry"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_english_year2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="English"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_biology_year2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Biology"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                    </TableRow>


                    <!-- Year 3 Row -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Year 3"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:padding="10dp"/>

                        <EditText
                            android:id="@+id/editText_math_year3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Math"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>

                        <EditText
                            android:id="@+id/editText_physics_year3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Physics"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_chemistry_year3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Chemistry"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_english_year3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="English"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                        <EditText
                            android:id="@+id/editText_biology_year3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Biology"
                            android:background="@drawable/rounded_box_bg"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:padding="10dp"/>
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </HorizontalScrollView>



        <Button
            android:id="@+id/proceedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"
            android:text="Proceed"
            android:textColor="@color/black"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/congo_linear_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </LinearLayout>


</ScrollView>

