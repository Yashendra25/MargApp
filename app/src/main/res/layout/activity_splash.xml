<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grad3"
    android:id="@+id/full"
    tools:context=".Activities.SplashActivity">

    <!-- Circular Orange Background -->
    <ImageView
        android:id="@+id/circular_background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/circular_background"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"

        android:elevation="2dp" />

    <!-- Centered images in a LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="15dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <!-- Left image -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/logo" />

        <!-- Right image -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/sih" />
    </LinearLayout>

    <!-- "Mark" TextView -->
    <TextView
        android:id="@+id/text_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:text="Marg"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:elevation="5dp"
        android:textSize="48sp"
        android:textAllCaps="true"
        android:layout_centerInParent="true"
        android:textColor="#000000" />

    <!-- Floating Button -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbutton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic__right"
        android:layout_alignParentBottom="true"
        android:padding="15dp"
        android:layout_margin="128dp"
        android:backgroundTint="@color/grad1"
        android:layout_centerInParent="true"

        />
</RelativeLayout>
